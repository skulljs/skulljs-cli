version: '3.9'
services:
  mysql:
    restart: always
    image: bitnami/mysql:latest
    environment:
      - MYSQL_PORT_NUMBER=3306
      - MYSQL_CHARACTER_SET=utf8
      - MYSQL_COLLATE=utf8_general_ci
      - MYSQL_ROOT_USER=root
      - MYSQL_ROOT_PASSWORD=
      - MYSQL_USER=
      - MYSQL_PASSWORD=
      - MYSQL_DATABASE=
    networks:
      - <%= props.app_name %>
    volumes:
      - ../docker-data/mysql:/bitnami/mysql/data
  <%= props.app_name %>:
    stdin_open: true
    restart: always
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - <%= props.port %>:<%= props.port %>
    depends_on:
      - mysql
    networks:
      - <%= props.app_name %>

networks:
  <%= props.app_name %>:
